<h1>Login</h1>

<div class="field">
  <label>Email</label>
  {{input value=email}}
</div>
<div class="field">
  <label>Display Name</label>
  {{input value=displayName}}
</div>
<div class="field">
  <label>Password</label>
  {{input type="password" value=password}}
</div>

<button {{action 'register' email displayName password}}>Register</button>
