
<div class="food-item {{if food.isAvailable '' 'not-available'}}">
  <div {{action 'toggleOpen'}} class="title-bar">
    {{food.name}}
      <span class="pull-right">
        {{if isOpen 'V' '>'}}
      </span>
  </div>
  {{#if isOpen}}
    {{icon-image food.imageUrl left=true}}
    <div class= "description">
      {{food.description}}
    </div>
    {{#link-to 'foods.food' food}}<button>Show</button>{{/link-to}}
    {{#link-to 'foods.food.edit' food}}<button>Edit</button>{{/link-to}}
      <button {{action 'toggleAvailability' food}}>
        {{if food.isAvailable 'Make Unavailable' 'Make Available'}}
      </button>
  {{/if}}
</div>
